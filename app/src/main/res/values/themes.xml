<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DreamAcademyBootcamp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Button-->
    <style name="myButton">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:state_pressed">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="sechondButton">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>
    <!--Button-->


    <!--Font-->
    <style name="firstFont">
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="sechondFont">
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="thirdFont">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/backgroundsechondary</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>